{
	"name": "carbon-market",
	"version": "1.0.0",
	"description": "Carbon market smart contracts in JavaScript",
	"main": "index.js",
	"engines": {
		"node": ">=12",
		"npm": ">=5"
	},
	"scripts": {
		"lint": "eslint $(pwd)/.",
		"pretest": "npm run lint",
		"test": "nyc mocha --recursive",
		"start": "fabric-chaincode-node start"
	},
	"engineStrict": true,
	"author": "oscargolding17@gmail.com",
	"license": "Apache-2.0",
	"dependencies": {
		"fabric-contract-api": "^2.0.0",
		"fabric-shim": "^2.0.0"
	},
	"devDependencies": {
		"babel-eslint": "^10.1.0",
		"chai": "^4.1.2",
		"eslint": "^7.29.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-plugin-import": "^2.23.4",
		"mocha": "^8.0.1",
		"nyc": "^14.1.1",
		"sinon": "^6.0.0",
		"sinon-chai": "^3.2.0"
	},
	"nyc": {
		"exclude": [
			"coverage/**",
			"test/**",
			"index.js",
			".eslintrc.js"
		],
		"reporter": [
			"text-summary",
			"html"
		],
		"all": true,
		"check-coverage": true,
		"statements": 100,
		"branches": 100,
		"functions": 100,
		"lines": 100
	}
}